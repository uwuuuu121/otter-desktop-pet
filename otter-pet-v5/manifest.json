{
  "manifest_version": 3,
  "name": "Otter Pet Timer",
  "version": "1.0",
  "description": "A cute otter desktop pet with Pomodoro timer",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["pet.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
